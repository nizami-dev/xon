{
  "compilerOptions": {
    "lib": ["ES2019", "dom"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["dist/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
