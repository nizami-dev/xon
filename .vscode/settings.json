{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // antlr4
  "antlr4.format": {
    "alignActions": true,
    "alignColons": "hanging",
    "alignFirstTokens": true,
    "alignLabels": true,
    "alignLexerCommands": true,
    "alignSemicolons": "hanging",
    "alignTrailers": true,
    "alignTrailingComments": true,
    "allowShortBlocksOnASingleLine": true,
    "allowShortRulesOnASingleLine": true,
    "breakBeforeBraces": false,
    "breakBeforeParens": false,
    "columnLimit": 150,
    "continuationIndentWidth": 2,
    "groupedAlignments": true,
    "indentWidth": 2,
    "keepEmptyLinesAtTheStartOfBlocks": true,
    "maxEmptyLinesToKeep": 1,
    "minEmptyLines": 0,
    "reflowComments": true,
    "ruleInternalsOnSingleLine": false,
    "singleLineOverrulesHangingColon": true,
    "spaceBeforeAssignmentOperators": true,
    "tabWidth": 2,
    "useTab": false
  },
  "antlr4.generation": {
    "mode": "internal"
  },
  "cSpell.words": [
    "bfnrtv",
    "camelcase",
    "codacy",
    "CRLFWS",
    "linebreak",
    "nodir",
    "nonblock-statement-body-position",
    "PAREN",
    "pinst",
    "plusplus",
    "postpublish",
    "postversion",
    "proto",
    "ts-nocheck"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": false,
  "editor.tabSize": 2,
  "files.autoSave": "afterDelay",
  "search.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "typescript.tsc.autoDetect": "off",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[antlr]": {
    "editor.defaultFormatter": "mike-lischke.vscode-antlr4"
  },
  "[xon]": {
    "editor.defaultFormatter": "nizami.xon"
  }
}
