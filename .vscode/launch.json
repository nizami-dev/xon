{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/projects/vscode",
        "--disable-extensions",
        "${workspaceFolder}/projects/vscode/test"
      ],
      "outFiles": ["${workspaceFolder}/projects/vscode/dist/**/*.js"],
      "preLaunchTask": "npm: vscode:debug"
    }
  ]
}
