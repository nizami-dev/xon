IntegerLiteralNode is LiteralNode:
  context IntegerLiteralContext
  value Integer
  radix Number
  integer String

  $($radix, $integer): $value = parseInt($integer.replace(/_/g, ''), $radix)

  $(context):
    $integer, $radix = context.text.split('x')[::-1]
    $($radix, $integer)

  $(parser XonParser):
    context = parser.literal()
    if context is IntegerLiteralContext: $(context)
    else: throw WrongExpectContext(context, context)

  toString() = "{$value}"