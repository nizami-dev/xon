{
  "name": "@xon/ast",
  "author": "Nizami",
  "version": "1.22.0",
  "description": "XON is an open-source programming language",
  "bugs": {
    "url": "https://github.com/xon-lang/ast/issues"
  },
  "homepage": "https://github.com/xon-lang/ast#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xon-lang/ast.git"
  },
  "keywords": [
    "xon",
    "ast",
    "compiler",
    "translator",
    "programming language"
  ],
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "rimraf": "node_modules/rimraf/bin.js",
    "grammar": "scripts/grammar.sh",
    "eslint": "eslint . --max-warnings=0",
    "test": "npm run grammar && jest src/tree --no-cache",
    "build": "scripts/build.sh",
    "pre-commit": "scripts/pre-commit.sh",
    "version": "npm run build",
    "postversion": "git push && cd dist && npm publish --access public",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "update-packages": "ncu -u && rimraf package-lock.json && rimraf node_modules && npm i"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "create-ts-index": "^1.13.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-check-updates": "^12.0.0",
    "pinst": "^2.1.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "chalk": "^4.1.2",
    "glob": "^7.2.0"
  }
}
