{
  "name": "@xon/core",
  "author": "Nizami",
  "version": "0.0.8",
  "description": "XON is an open-source programming language",
  "bugs": {
    "url": "https://github.com/xon-lang/core/issues"
  },
  "homepage": "https://github.com/xon-lang/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xon-lang/core.git"
  },
  "keywords": [
    "xon",
    "ast",
    "compiler",
    "translator",
    "programming language"
  ],
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "grammar": "scripts/grammar.sh",
    "eslint": "eslint . --max-warnings=0",
    "test": "jest --no-cache",
    "build": "scripts/build.sh",
    "version": "npm run build",
    "postversion": "git push --tags && cd dist && npm publish --access public",
    "update-packages": "ncu -u -x chalk && rm -rf package-lock.json && rm -rf node_modules && npm i",
    "translator": "ts-node src/util/cli.ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "create-ts-index": "^1.14.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "npm-check-updates": "^12.5.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "chalk": "^4.1.2",
    "glob": "^7.2.0"
  }
}
