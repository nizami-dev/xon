{
  "name": "xon",
  "author": "nizami",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/vscode": "^1.93.0",
    "barrelsby": "^2.8.1",
    "esbuild": "^0.23.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "test": "jest --no-cache",
    "build": "rm -rf packages/vscode/dist && tsc",
    "dev": "tsc --noEmit --watch",
    "vscode:debug": "npm run build",
    "barrelsby": "barrelsby -qD -e dist -e .gen -e .test -d",
    "barrels:common": "npm run barrelsby -- packages/common",
    "barrels:core": "npm run barrelsby -- packages/core",
    "barrels:vscode": "npm run barrelsby -- packages/vscode",
    "barrels:xon-lib": "npm run barrelsby -- packages/xon-lib",
    "barrels": "npm run barrels:common && npm run barrels:core && npm run barrels:vscode && npm run barrels:xon-lib"
  }
}
