{
  "name": "xon",
  "author": "nizami",
  "type": "module",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.96.0",
    "barrelsby": "^2.8.1",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "test": "vitest",
    "dev": "tsc --noEmit --watch",
    "vscode:build2": "rm -rf 'packages/vscode/dist' && tsc",
    "vscode:build": "rm -rf 'packages/vscode/dist' && esbuild 'packages/vscode/src/main.ts' --bundle --outfile='packages/vscode/dist/vscode/src/main.js' --external:vscode --format=cjs --platform=node",
    "vscode:debug": "npm run vscode:build",
    "barrels": "barrelsby -qD -e dist -e .gen -e .test -d 'packages/common' 'packages/core' 'packages/translator' 'packages/typing' 'packages/vscode' 'packages/xon-lib'"
  }
}
