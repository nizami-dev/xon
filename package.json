{
    "name": "@xon/ast",
    "author": "Nizami",
    "version": "1.0.10",
    "description": "XON is an open-source programming language",
    "bugs": {
        "url": "https://github.com/xon-lang/ast/issues"
    },
    "homepage": "https://github.com/xon-lang/ast#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xon-lang/ast.git"
    },
    "keywords": [
        "xon",
        "ast",
        "compiler",
        "translator",
        "programming language"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "grammar": "./grammar.sh",
        "preversion": "npm run test",
        "test": "npm run grammar && jest",
        "postversion": "git push && git push --tags",
        "deploy": "./deploy.sh",
        "pre-commit": "{ git diff --name-only ; git diff --name-only --staged ; } | sort | grep '\\.ts$' && npm test || echo 'Tests skipped'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit"
        }
    },
    "devDependencies": {
        "@types/jest": "^26.0.8",
        "@types/node": "^14.0.27",
        "antlr4ts-cli": "^0.5.0-alpha.3",
        "create-ts-index": "^1.13.3",
        "husky": "^4.2.5",
        "jest": "^26.2.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.1.4",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "antlr4ts": "^0.5.0-alpha.3"
    }
}
