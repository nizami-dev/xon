{
  "name": "@xon/core",
  "author": "Nizami",
  "version": "0.4.6",
  "description": "XON is an open-source programming language",
  "bugs": {
    "url": "https://github.com/xon-lang/core/issues"
  },
  "homepage": "https://github.com/xon-lang/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xon-lang/core.git"
  },
  "keywords": [
    "xon",
    "ast",
    "programming language"
  ],
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "grammar": "scripts/grammar.sh",
    "eslint": "eslint . --max-warnings=0",
    "test": "jest --no-cache",
    "build": "scripts/build.sh",
    "version": "npm run build",
    "postversion": "git push --tags && cd dist && npm publish --access public",
    "update-packages": "ncu -u -x 'chalk' && rm -rf package-lock.json && rm -rf node_modules && npm i --force"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "create-ts-index": "^1.14.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "npm-check-updates": "^16.1.3",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "chalk": "^4.1.2",
    "glob": "^8.0.3"
  }
