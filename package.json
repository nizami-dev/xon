{
  "name": "@xon/core",
  "author": "Nizami",
  "version": "0.4.7",
  "description": "XON is an open-source programming language",
  "bugs": {
    "url": "https://github.com/xon-lang/core/issues"
  },
  "homepage": "https://github.com/xon-lang/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xon-lang/core.git"
  },
  "keywords": [
    "xon",
    "ast",
    "programming language"
  ],
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": " madge --circular --extensions ts . && eslint .",
    "test": "jest --no-cache",
    "build": "scripts/build.sh",
    "version": "npm run build",
    "postversion": "git push --tags && cd dist && npm publish --access public",
