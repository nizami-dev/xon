{
  "name": "xon",
  "author": "nizami",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "barrelsby": "^2.8.1",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "test": "jest --no-cache",
    "dev": "tsc --noEmit --watch",
    "vscode:build2": "rm -rf '#/vscode/dist' && tsc",
    "vscode:build": "rm -rf '#/vscode/dist' && esbuild '#/vscode/src/main.ts' --bundle --outfile='#/vscode/dist/vscode/src/main.js' --external:vscode --format=cjs --platform=node",
    "vscode:debug": "npm run vscode:build",
    "barrelsby": "barrelsby -qD -e dist -e .gen -e .test -d",
    "barrels": "npm run barrelsby -- '#/common' '#/core' '#/semantics' '#/vscode' '#/xon-lib'"
  }
}
