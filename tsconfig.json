{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ES2021"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    "target": "ES2021"
  },
  "exclude": [],
  "include": [
    "src/**/*"
  ]
}