{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@grammar/*": [
                "./src/grammar/.antlr/*"
            ],
            "@parser": [
                "./src/grammar/.antlr/XonParser"
            ],
            "@lexer": [
                "./src/grammar/.antlr/XonLexer"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}